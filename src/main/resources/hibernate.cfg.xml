<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
          "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
          "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<!-- Generated by MyEclipse Hibernate Tools.                   -->
<hibernate-configuration>

<session-factory>

	<property name="show_sql">true</property>
	<property name="format_sql">true</property>
	
	<!-- 开启二级缓存 -->
	<property name="hibernate.cache.use_second_level_cache">true</property>
	<!-- 加载提供商 -->
	<property name="hibernate.cache.region.factory_class">
		org.hibernate.cache.ehcache.SingletonEhCacheRegionFactory
	</property>
	<!-- HQL查询缓存 -->
	<property name="hibernate.cache.use_query_cache">true</property>

	<!-- 要缓存的Class或Collection -->
	<class-cache usage="read-write" class="cn.sakuraffy.shop.model.Account"/>
	<class-cache usage="read-write" class="cn.sakuraffy.shop.model.Category"/>
	<class-cache usage="read-write" class="cn.sakuraffy.shop.model.Product"/>

</session-factory>

</hibernate-configuration>